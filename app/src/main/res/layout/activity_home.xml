<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".activities.HomeActivity">

    <LinearLayout
        android:id="@+id/search_filter_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <FrameLayout
                android:id="@+id/search_icon_container"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/icon_ripple_background"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/icon_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    android:layout_gravity="center"
                    android:contentDescription="Search Icon"/>
            </FrameLayout>

            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search for location or tour"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:inputType="text"
                android:imeOptions="actionSearch"/>

            <FrameLayout
                android:id="@+id/mic_icon_container"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/icon_ripple_background"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/icon_mic"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mic"
                    android:layout_gravity="center"
                    android:contentDescription="Voice Search"/>
            </FrameLayout>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <Spinner
                    android:id="@+id/spinner_price_range"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:spinnerMode="dropdown"
                    android:dropDownVerticalOffset="40dp"
                    android:entries="@array/price_ranges"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"/>

                <Spinner
                    android:id="@+id/spinner_trip_duration"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginStart="10dp"
                    android:dropDownVerticalOffset="40dp"
                    android:entries="@array/trip_durations"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"/>

                <Spinner
                    android:id="@+id/spinner_departure"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginStart="10dp"
                    android:dropDownVerticalOffset="40dp"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"/>

                <Spinner
                    android:id="@+id/spinner_transport"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginStart="10dp"
                    android:dropDownVerticalOffset="40dp"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"/>

                <Spinner
                    android:id="@+id/spinner_airway"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginStart="10dp"
                    android:dropDownVerticalOffset="40dp"
                    android:entries="@array/airway_options"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"/>

                <Spinner
                    android:id="@+id/spinner_seats"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginStart="10dp"
                    android:dropDownVerticalOffset="40dp"
                    android:entries="@array/passenger_count_options"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"/>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tour_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/search_filter_area"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/tour_list_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>