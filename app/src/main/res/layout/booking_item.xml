<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:elevation="6dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Tour Image -->
        <ImageView
            android:id="@+id/tour_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tour1"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tour1"
            android:clipToOutline="true"/>

        <!-- Info Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="16dp">

            <!-- Tour Name -->
            <TextView
                android:id="@+id/tour_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tour Singapore"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#212121"/>

            <!-- Tour Dates -->
            <TextView
                android:id="@+id/tour_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time: 26/10 - 30/10/2025"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp"/>

            <!-- Tour Price -->
            <TextView
                android:id="@+id/tour_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: 5.000.000 đ"
                android:textSize="14sp"
                android:textColor="#009688"
                android:layout_marginTop="4dp"
                android:textStyle="bold"/>

            <!-- Status -->
            <TextView
                android:id="@+id/tour_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Chờ Duyệt"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>