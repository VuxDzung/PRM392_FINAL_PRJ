<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    tools:context=".activities.ManageTourActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tour Dashboard"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="12dp"
        android:layout_centerHorizontal="true" />

    <!-- RecyclerView danh sách tour -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tourRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvHeader"
        android:layout_above="@id/admin_bottom_nav_container"
        android:padding="8dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_admin_tour" />

    <!-- Empty state khi chưa có tour -->
    <LinearLayout
        android:id="@+id/tvEmptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tours yet"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press the + button to create your first tour."
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
    </LinearLayout>

    <!-- FloatingActionButton thêm tour -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/admin_bottom_nav_container"
        app:srcCompat="@android:drawable/ic_input_add"
        android:contentDescription="Add Tour" />

    <!-- Bottom Navigation (include từ file chung) -->
    <FrameLayout
        android:id="@+id/admin_bottom_nav_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/activity_admin_nav_base" />
    </FrameLayout>

</RelativeLayout>
