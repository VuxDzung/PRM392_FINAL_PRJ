<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/yellow_light"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#E0E0E0"
            android:layout_marginEnd="16dp">
            <ImageView
                android:id="@+id/tour_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Tour Image Placeholder" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tour_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ha long Bay"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tour_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Days - 3 Nights"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tour_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$120.34"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/design_default_color_primary"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="★" android:textColor="#FFC107"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="★" android:textColor="#FFC107"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="★" android:textColor="#FFC107"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="★" android:textColor="#FFC107"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="☆" android:textColor="#FFC107"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tour_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hanoi -> HaLong one-way"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btn_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="See More"
                    android:textSize="12sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="@color/orange"/>

                <Button
                    android:id="@+id/btn_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Booking"
                    android:textSize="12sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/design_default_color_primary"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>