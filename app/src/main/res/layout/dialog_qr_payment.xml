<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Quét QR để thanh toán"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <ImageView
        android:id="@+id/img_qr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_qr_placeholder"
        android:contentDescription="QR Code"/>

    <TextView
        android:id="@+id/tv_account_name"
        android:text="Tài khoản: MINH ĐẸP ZAI"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/tv_account_number"
        android:text="STK: 01234686868"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/tv_payment_amount"
        android:text="Số tiền: 5.000.000 đ"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/tv_payment_content"
        android:text="Nội dung: Tour du lịch Singapore 4N3D"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <Button
        android:id="@+id/btn_confirm"
        android:text="Confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
</LinearLayout>